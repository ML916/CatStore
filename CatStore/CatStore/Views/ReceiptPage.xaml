<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatStore.Views.ReceiptPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Kvitto:" FontSize="Medium"/>
            <Label Text="{Binding sum, StringFormat='Summa: {0}'}"
                   FontSize="Medium"/>
            <Label Text="{Binding status, StringFormat='Beställningsstatus: {0}'}"
                   FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>